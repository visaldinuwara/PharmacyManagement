<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.LoginPageController"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: #2c3e50;"> <VBox alignment="CENTER" prefHeight="300.0" prefWidth="300.0" spacing="15.0"
                                                          style="-fx-background-color: #34495e; -fx-background-radius: 8; -fx-padding: 20;" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="150.0" AnchorPane.topAnchor="50.0">

    <Label text="User Login" textFill="WHITE"> <font>
        <Font name="System Bold" size="28.0"/>
    </font>
        <VBox.margin>
            <Insets bottom="10.0"/>
        </VBox.margin>
    </Label>

    <VBox alignment="CENTER_LEFT" prefWidth="250.0" spacing="5.0">
        <Label text="Username:" textFill="#bdc3c7"/> <TextField fx:id="usernameField" promptText="Enter username" prefWidth="250.0"
                                                                style="-fx-control-inner-background: #4a6572; -fx-text-fill: white; -fx-prompt-text-fill: #95a5a6; -fx-background-radius: 4; -fx-border-color: #5d818e; -fx-border-radius: 4;"/>
    </VBox>

    <VBox alignment="CENTER_LEFT" prefWidth="250.0" spacing="5.0">
        <Label text="Password:" textFill="#bdc3c7"/> <PasswordField fx:id="passwordField" promptText="Enter password" prefWidth="250.0"
                                                                    style="-fx-control-inner-background: #4a6572; -fx-text-fill: white; -fx-prompt-text-fill: #95a5a6; -fx-background-radius: 4; -fx-border-color: #5d818e; -fx-border-radius: 4;"/>
    </VBox>

    <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLoginButtonAction" text="Login" prefWidth="150.0"
            style="-fx-background-color: #008779; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 5;"> <VBox.margin>
        <Insets top="15.0"/>
    </VBox.margin>
    </Button>

    <Label fx:id="messageLabel" text="" textFill="RED">
        <font>
            <Font size="12.0"/>
        </font>
    </Label>
</VBox>
</AnchorPane>